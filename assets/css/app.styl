@import bootstrap
@import nib


*
  margin                  0
  padding                 0
  font-family             'Helvetica', 'Arial', 'Verdana'

pre, span.code
  font-family             'Courier', 'Monospace'
  font-weight             bold
  display                 inline


header
  position                fixed
  top                     0
  width                   100%
  background-color        #3B5998
  color                   #fff
  .content
    padding               5px 30px
    overflow              hidden
    h1
      color               #fff
      font-size           170%
      margin-bottom       0
      float               left
    pre
      float               right
      margin              0
      padding             5px 12px
      color               black


section.info
  margin                  60px 30px 10px
  overflow                hidden
  max-width               960px
  line-height             22px
  p
    font-size             17px
    line-height           160%
  span
    font-size             85%
    padding               5px
    background-color      rgba(0,0,0,.05)



#photos
  margin                  0 30px
  line-height             0

  column-count            5
  column-gap              10px

  a
    display             block
    overflow            hidden
    margin              0 0 10px

  img
    width   100% !important
    height  auto !important



@media (max-width: 1200px)
  #photos
    column-count            4

@media (max-width: 1000px)
  #photos
    column-count            3

@media (max-width: 800px)
  #photos
    column-count            2

@media (max-width: 520px)
  #photos
    margin                  0 15px
    column-count            1
  header
    h1
      text-align          center
    pre
      display             none
